# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout.
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Source code files
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sql text eol=lf

# Configuration files
*.env text eol=lf
*.env.example text eol=lf
*.gitignore text eol=lf
*.gitattributes text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Batch files (Windows) - keep CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
